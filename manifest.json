{
    "manifest_version": 3,
    "name": "ThinkTwice",
    "version": "1.0",
    "description": "Evita entrar a redes sociales o plataformas que roban tu atenci√≥n sin pensarlo, hazlo de forma intencionada",
    "permissions": [
        "storage"
    ],
    "host_permissions": [
        "*://*.tiktok.com/*",
        "*://*.instagram.com/*",
        "*://*.facebook.com/*",
        "*://*.youtube.com/*",
        "*://*.reddit.com/*",
        "*://*.x.com/*",
        "*://*.threads.com/*",
        "*://*.twitter.com/*",
        "*://*.pinterest.com/*",
        "*://*.snapchat.com/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "*://*.tiktok.com/*",
                "*://*.instagram.com/*",
                "*://*.facebook.com/*",
                "*://*.youtube.com/*",
                "*://*.reddit.com/*",
                "*://*.x.com/*",
                "*://*.threads.com/*",
                "*://*.twitter.com/*",
                "*://*.pinterest.com/*",
                "*://*.snapchat.com/*"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_start"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "block.html",
                "block.css",
                "block-ui.js",
                "content.js",
                "block.js",
                "icons/*.png"
            ],
            "matches": [
                "*://*.tiktok.com/*",
                "*://*.instagram.com/*",
                "*://*.facebook.com/*",
                "*://*.youtube.com/*",
                "*://*.reddit.com/*",
                "*://*.x.com/*",
                "*://*.twitter.com/*",
                "*://*.threads.com/*",
                "*://*.pinterest.com/*",
                "*://*.snapchat.com/*"
            ]
        }
    ],
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}